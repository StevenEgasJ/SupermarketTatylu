# MongoDB connection
MONGODB_URI=mongodb://localhost:27017/el-valle

# Server port and base URL
PORT=4000
APP_BASE_URL=http://localhost:4000

# JWT secret
JWT_SECRET=change_this_secret

# SMTP configuration (optional). If omitted, a dev Ethereal account will be used and preview URLs logged.
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_pass
EMAIL_FROM="Tatylu <no-reply@yourdomain.com>"

# Allowed origins for CORS (comma separated)
ALLOWED_ORIGINS=*
